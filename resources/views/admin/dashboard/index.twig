{% extends "layouts/app.twig" %}

{% block title %}{{ __('Dashboard') }}{% endblock %}

{% block content %}
      <div class="page-wrapper">
        <!-- Page header -->
        <div class="page-header d-print-none">
          <div class="container-xl">
            <div class="row g-2 align-items-center">
              <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                  {{ __('Overview') }}
                </div>
                <h2 class="page-title">
                  {{ __('Dashboard') }}
                </h2>
              </div>
              <!-- Page title actions -->
              <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                  <a href="{{route('createZone')}}" class="btn btn-primary d-none d-sm-inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                    {{ __('Create new zone') }}
                  </a>
                  <a href="{{route('createZone')}}" class="btn btn-primary d-sm-none btn-icon" aria-label="{{ __('Create new zone') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Page body -->
        <div class="page-body">
          <div class="container-xl">
              <div class="col-12">
              {% include 'partials/flash.twig' %}
                <div class="row row-cards">
                  <div class="col-12 col-lg-6">
                    <a class="card card-link" href="{{route('listZones')}}">
                      <div class="card-body">
                        <div class="row align-items-center">
                          <div class="col-auto">
                            <span class="bg-primary text-white avatar avatar-lg"><svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4"></path><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4"></path><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4"></path><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4"></path><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4"></path><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4"></path><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4"></path>   <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4"></path><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4"></path></svg>
                            </span>
                          </div>
                          <div class="col">
                            <div class="h1 mt-3">
                              {{ zones }} {{ __('Zones') }}
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>
                  </div>
                </div>
                <div class="row row-cards mt-4">
                  <div class="col-12 col-md-6">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">{{ __('Recent Zones') }}</h3>
                      </div>
                      <div class="table-responsive">
                        <table class="table table-vcenter card-table table-striped">
                          <thead>
                            <tr>
                              <th>{{ __('Zone') }}</th>
                              <th>{{ __('Creation Date') }}</th>
                            </tr>
                          </thead>
                          <tbody>
                          {% if latest_zones|length > 0 %}
                            {% for zone in latest_zones %}
                              <tr>
                                <td><a href="/zone/view/{{ zone.domain_name }}">{{ zone.domain_name }}</a></td>
                                <td class="text-secondary">{{ zone.created_at }}</td>
                              </tr>
                            {% endfor %}
                          {% else %}
                            <tr><td colspan="2">{{ __('No Data') }}</td></tr>
                          {% endif %}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="card">
                      <div class="card-body">
                          <h3 class="card-title">{{ __('DNS Tools') }}</h3>
                          <p class="card-text">{{ __('Quickly access DNS records and analysis tools.') }}</p>
                          <div class="d-flex flex-wrap justify-content-center gap-2">
                              <a href="https://dnsrecords.io/" target="_blank" class="btn btn-secondary">dnsrecords.io</a>
                              <a href="https://digwebinterface.com/" target="_blank" class="btn btn-secondary">Web DIG</a>
                              <a href="https://tools.keycdn.com/dig" target="_blank" class="btn btn-secondary">DNS Checker</a>
                              <a href="https://mxtoolbox.com/" target="_blank" class="btn btn-secondary">MX Lookup</a>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
        {% include 'partials/footer.twig' %}
      </div>
{% endblock %}